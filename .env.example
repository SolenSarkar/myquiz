# Firebase Configuration
VITE_FIREBASE_API_KEY=REPLACE_WITH_YOUR_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=REPLACE_WITH_YOUR_AUTH_DOMAIN
VITE_FIREBASE_PROJECT_ID=REPLACE_WITH_YOUR_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=REPLACE_WITH_YOUR_STORAGE_BUCKET
VITE_FIREBASE_MESSAGING_SENDER_ID=REPLACE_WITH_YOUR_MESSAGING_SENDER_ID
VITE_FIREBASE_APP_ID=REPLACE_WITH_YOUR_APP_ID

# Admin Credentials (Manual Authentication)
VITE_ADMIN_EMAIL=admin@example.com
VITE_ADMIN_PASSWORD=admin123

# Optional backend API base URL for persisting scores and fetching quizzes
# Example: VITE_API_BASE=https://api.myquizbackend.com
VITE_API_BASE=

# Optional absolute URL to the backend admin panel. If set, successful admin login
# will open this URL in a new tab. If not set, the UI shows a local confirmation.
# Example: VITE_ADMIN_PANEL_URL=https://admin.myquizbackend.com
VITE_ADMIN_PANEL_URL=
